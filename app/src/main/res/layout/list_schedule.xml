<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="385dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#000"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/origin_top"
                    android:paddingLeft="7dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="7dp"
                    android:textColor="#FFF"
                    android:text="CGK"
                    android:textSize="8pt"
                    android:layout_width="45dp"
                    android:layout_height="50dp" />

                <ImageView
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/signright"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/destination_top"
                    android:paddingLeft="2dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="12dp"
                    android:paddingRight="7dp"
                    android:textColor="#FFF"
                    android:text="JOG"
                    android:textSize="8pt"
                    android:layout_width="60dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/amount_top"
                    android:paddingLeft="2dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#FFF"
                    android:text="IDR 100000"
                    android:textSize="8pt"
                    android:layout_width="150dp"
                    android:layout_height="50dp"

                    />

            </LinearLayout>
        
            <LinearLayout
                android:orientation="horizontal"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/img_logo_center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:src="@drawable/planedepart"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/city_departure"
                            android:textSize="4pt"
                            android:text="Jakarta"
                            android:layout_width="150dp"
                            android:layout_height="30dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:src="@drawable/planearrive"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:id="@+id/city_arrival"
                            android:textSize="4pt"
                            android:text="Yogyakarta"
                            android:layout_width="150dp"
                            android:layout_height="30dp" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Select"
                    android:textColor="#FFF"
                    android:background="#f51e1e"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    />


            </LinearLayout>
        

            <LinearLayout
                android:paddingTop="8dp"
                android:background="#f3f1ff"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/origin_bottom"
                            android:textSize="10pt"
                            android:text="CGK"
                            android:textColor="#000"
                            android:layout_width="50dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:id="@+id/departure_time_date"
                            android:textSize="10pt"
                            android:text="19 Des"
                            android:textColor="#949999"
                            android:layout_width="85dp"
                            android:layout_height="30dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/departure_time_time"
                        android:textSize="18pt"
                        android:text="09:30"
                        android:textColor="#f51e1e"
                        android:layout_width="120dp"
                        android:layout_height="60dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/destination_bottom"
                            android:textSize="10pt"
                            android:text="CGK"
                            android:textColor="#000"
                            android:layout_width="50dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:id="@+id/arrival_time_date"
                            android:textSize="10pt"
                            android:text="19 Des"
                            android:textColor="#949999"
                            android:layout_width="85dp"
                            android:layout_height="30dp" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/arrival_time_time"
                        android:textSize="18pt"
                        android:text="12:05"
                        android:textColor="#f51e1e"
                        android:layout_width="120dp"
                        android:layout_height="60dp" />

                </LinearLayout>



             </LinearLayout>

                 <LinearLayout
                     android:visibility="gone"
                     android:orientation="horizontal"
                     android:background="#40ADCF"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:gravity="center_horizontal"
                     android:paddingTop="8dp"
                     android:id="@+id/transit_via"
                     >

                     <ImageView
                         android:src="@drawable/planedepart"
                         android:layout_marginRight="10dp"
                         android:layout_width="30dp"
                         android:layout_height="30dp" />

                     <TextView
                         android:textColor="#FFF"
                         android:layout_marginTop="10dp"
                         android:textSize="6pt"
                         android:text="Transit Via"
                         android:layout_width="90dp"
                         android:layout_height="match_parent"
                         android:textStyle="bold"/>

                     <TextView
                         android:textStyle="bold"
                         android:textColor="#FFF"
                         android:layout_marginTop="10dp"
                         android:id="@+id/transit_info"
                         android:textSize="6pt"
                         android:text="CGK (28 Nov 20:15)"
                         android:layout_width="120dp"
                         android:layout_height="match_parent" />


                 </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="8dp"
                    >

                    <TextView
                        android:textSize="8pt"
                        android:text="Flight No."
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/flight_no_bottom"
                        android:textSize="8pt"
                        android:text="1234"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/journey_id"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:textSize="9sp"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/fare_id"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:textSize="9sp"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/class_code"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:textSize="9sp"
                    android:visibility="invisible"
                    />

            </LinearLayout>


        </LinearLayout>
</LinearLayout>